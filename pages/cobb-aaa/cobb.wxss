/* pages/gallery/gallery.wxss */

  .gallery {
    display: flex;
    flex-wrap: wrap;
    margin: 10rpx; 
  }

  .image-view {
    width: 50%; 
    padding: 10rpx;
    
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;

  }
  
  .image {
    width: 100%;
    height: 100%;
    width: auto;
    height: auto;
    margin: 10rpx;
  }

  .space {
    height: 10px;
  }

  .time {
    position: relative;
    height: 100%;
    width: 100%;
    top: 50%;
    left: 50%;
    margin-left: -70px;
  }