.page-section{
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 0rpx;
}
.page-section_center{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.page-section:last-child{
  margin-bottom: 0;
}
.page-section-gap{
  box-sizing: border-box;
  padding: 0 0rpx;
}
.page-section-spacing{
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}
.page-section-title{
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.page-section-gap .page-section-title{
  padding-left: 0;
  padding-right: 0;
 
}

